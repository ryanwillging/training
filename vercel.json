{
  "functions": {
    "api/index.py": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index" }
  ],
  "redirects": [
    { "source": "/metrics", "destination": "/goals", "permanent": true },
    { "source": "/reviews", "destination": "/plan-adjustments", "permanent": true }
  ],
  "crons": [
    {
      "path": "/api/cron/sync",
      "schedule": "0 5 * * *"
    }
  ]
}
